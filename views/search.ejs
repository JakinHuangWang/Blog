<!DOCTYPE html>
<html lang="en">

<%- include('header') -%>

<body>

  <%- include('navbar') -%>

  <!-- Posts -->
  <div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
        <% for (var i = 0; i < blogposts.length; i++) { %>
        <div class="post-preview">
            <a href="/post">
            <h2 class="post-title">
                <%= blogposts[i].title%>
            </h2>
            <h3 class="post-subtitle">
                <%= blogposts[i].body %>
            </h3>
            <p class="post-meta">Posted by Jakin at <%= blogposts[i].date %> </p>
            </a>
        </div>
        <hr>
        <% } %>
        <!-- Pager -->
        <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
        </div>
    </div>
  </div>

  <%- include('footer') -%>
  <%- include('script') -%>

</body>

</html>