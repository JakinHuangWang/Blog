<!DOCTYPE html>
<html lang="en">

<%- include('header') -%>

<body>

  <%- include('navbar') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url(
    '<%= url %>'); background-size: contain; background-repeat: no-repeat;">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= blogpost.title %></h1>
            <h2 class="subheading"><%= blogpost.body.substring(0, 30) %></h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              on August 24, 2019</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= blogpost.body %>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <%- include('footer') -%>
  <%- include('script') -%>

</body>

</html>
